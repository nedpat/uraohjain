---
import '../styles/index.scss';
---

<!-- Navbar -->
<nav class='navbar shadow-lg'>
  <div class='max-w-fit mx-auto'>
    <div class='flex justify-between'>
      <div class='flex'>
        <div>
          <!-- Primary Navbar items -->
          <div class='hidden md:flex items-center space-x-1'>
            <a href='' class='py-4 px-4 mx-10 active'>Etusivu</a>
            <a href='' class='py-4 px-14 transition duration-300'>Yrityksille</a>
            <a href='' class='py-4 px-14 transition duration-300'>Ilmoittaudu</a>
            <a href='' class='py-4 px-14 transition duration-300'>Ajankohtaista</a>
            <a href='' class='py-4 px-14 transition duration-300'>Hanke</a>
            <a href='' class='py-4 px-14 transition duration-300'>Yhteystiedot</a>
            <!-- <a href='' class='py-4 px-14 transition duration-300'>ENG</a> -->
            <button class='py-4 px-20'>EN</button>
          </div>
        </div>
        <!-- Mobile menu button -->
        <div class='md:hidden flex items-center'>
          <button class='outline-none mobile-menu-button'>
            <svg
              class='w-6 h-6 text-gray-500 hover:text-green-500'
              x-show='!showMenu'
              fill='none'
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              viewBox='0 0 24 24'
              stroke='currentColor'
            >
              <path d='M4 6h16M4 12h16M4 18h16'></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
    <!-- mobile menu -->
    <div class='hidden mobile-menu'>
      <ul class=''>
        <li class='active'>
          <a href='index.html' class='block text-sm px-2 py-4 text-white bg-green-500 font-semibold'
            >Etusivu</a
          >
        </li>
        <li>
          <a
            href='#services'
            class='block text-sm px-2 py-4 hover:bg-green-500 transition duration-300'
            >Yrityksille</a
          >
        </li>
        <li>
          <a
            href='#about'
            class='block text-sm px-2 py-4 hover:bg-green-500 transition duration-300'
            >Ilmoittaudu</a
          >
        </li>
        <li>
          <a
            href='#contact'
            class='block text-sm px-2 py-4 hover:bg-green-500 transition duration-300'
            >Ajankohtaista</a
          >
        </li>
        <li>
          <a
            href='#contact'
            class='block text-sm px-2 py-4 hover:bg-green-500 transition duration-300'>Hanke</a
          >
        </li>
        <li>
          <a
            href='#contact'
            class='block text-sm px-2 py-4 hover:bg-green-500 transition duration-300'
            >Yhteystiedot</a
          >
        </li>
        <li>
          <a
            href='#contact'
            class='block text-sm px-2 py-4 hover:bg-green-500 transition duration-300'>ENG</a
          >
        </li>
      </ul>
    </div>
    <script>
      const btn = document.querySelector('button.mobile-menu-button');
      const menu = document.querySelector('.mobile-menu');

      btn?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
      });
    </script>
  </div>
</nav>
