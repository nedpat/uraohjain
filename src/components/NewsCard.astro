---
// library imports
import { Image } from '@astrojs/image/components';

const { frontmatter, url, tagType, showImage = 'block' } = Astro.props;

const Tag = tagType;

const { title, date, author, image, description } = frontmatter;
---

<article>
  <a href={url} aria-hidden='true' tabindex='-1' class={showImage}>
    <Image
      src={image.src}
      alt={image.alt}
      width='400'
      height='250'
      format='webp'
      fit='cover'
      quality={80}
      aspectRatio='4:1'
    />
  </a>
  <Tag class='h3'>
    <a href={url}>{title}</a>
  </Tag>
  <a href={url}>
    <p>{description}</p>
  </a>
</article>
